<script>
    // --- Chart Interactivity ---
    const selectionCtx = document.getElementById('selectionChart').getContext('2d');
    const initialData = {
        labels: ['Marquee Tool', 'Lasso Tool', ['Magic Wand', 'Tool']],
        datasets: [{
            label: 'Ideal untuk Bentuk',
            data: [70, 85, 95],
            backgroundColor: ['#FF6363', '#FF8C8C', '#FFB3B3'],
        }]
    };
    const selectionChart = new Chart(selectionCtx, {
        type: 'bar',
        data: JSON.parse(JSON.stringify(initialData)), // Deep copy
        options: {
            maintainAspectRatio: false,
            scales: {
                y: { beginAtZero: true, max: 100 }
            },
            plugins: {
                legend: { display: false },
                tooltip: {
                    callbacks: {
                        title: (tooltipItems) => {
                            let label = tooltipItems[0].chart.data.labels[tooltipItems[0].dataIndex];
                            return Array.isArray(label) ? label.join(' ') : label;
                        },
                        label: function(context) {
                            let value = context.parsed.y;
                            if (value > 90) return 'Sangat spesifik (berbasis warna)';
                            if (value > 80) return 'Bentuk bebas (manual)';
                            return 'Bentuk geometris dasar';
                        }
                    }
                }
            }
        }
    });

    const updateChart = (toolIndex) => {
        const newData = initialData.datasets[0].data.map((_, index) => index === toolIndex ? initialData.datasets[0].data[index] : 0);
        selectionChart.data.datasets[0].data = newData;
        selectionChart.update();
    };
    
    document.getElementById('marqueeBtn').addEventListener('click', () => updateChart(0));
    document.getElementById('lassoBtn').addEventListener('click', () => updateChart(1));
    document.getElementById('wandBtn').addEventListener('click', () => updateChart(2));
    document.getElementById('resetBtn').addEventListener('click', () => {
        selectionChart.data.datasets[0].data = initialData.datasets[0].data;
        selectionChart.update();
    });

    // --- Blending Mode Interactivity ---
    const blendLayer = document.getElementById('blend-top-layer');
    const blendSelector = document.getElementById('blendModeSelect');
    blendSelector.addEventListener('change', (event) => {
        blendLayer.style.mixBlendMode = event.target.value;
    });

    // --- QUIZ MODULE ---
    const quizData = [
        { topic: "Seleksi", question: "Alat seleksi mana yang paling cocok untuk memilih objek berbentuk kotak atau lingkaran sempurna?", options: ["Lasso Tool", "Marquee Tool", "Magic Wand Tool", "Quick Selection Tool"], answer: "Marquee Tool" },
        { topic: "Seleksi", question: "Untuk menyeleksi area dengan bentuk bebas seperti menggambar dengan pensil, Anda menggunakan...", options: ["Rectangular Marquee", "Polygonal Lasso", "Lasso Tool", "Magnetic Lasso"], answer: "Lasso Tool" },
        { topic: "Seleksi", question: "Magic Wand Tool bekerja dengan menyeleksi area berdasarkan...", options: ["Bentuk geometris", "Kontras pinggiran", "Kemiripan warna piksel", "Ukuran objek"], answer: "Kemiripan warna piksel" },
        { topic: "Seleksi", question: "Shortcut keyboard untuk membatalkan seleksi (deselect) adalah...", options: ["Ctrl+A", "Ctrl+X", "Ctrl+D", "Ctrl+Z"], answer: "Ctrl+D" },
        { topic: "Layer & Blending", question: "Apa fungsi utama dari 'Layers' di Photoshop?", options: ["Menyimpan file", "Mengatur elemen secara terpisah", "Memberi filter", "Mengubah ukuran kanvas"], answer: "Mengatur elemen secara terpisah" },
        { topic: "Layer & Blending", question: "Blending mode 'Multiply' akan menghasilkan warna yang...", options: ["Lebih terang", "Lebih gelap", "Inversi", "Abu-abu"], answer: "Lebih gelap" },
        { topic: "Layer & Blending", question: "Blending mode 'Screen' memiliki efek yang berlawanan dengan...", options: ["Overlay", "Soft Light", "Multiply", "Difference"], answer: "Multiply" },
        { topic: "Layer & Blending", question: "Untuk mengatur tingkat transparansi sebuah layer, Anda mengubah nilai...", options: ["Fill", "Opacity", "Flow", "Blending"], answer: "Opacity" },
        { topic: "Retouching", question: "Alat yang paling cepat untuk menghilangkan jerawat atau noda kecil pada foto adalah...", options: ["Clone Stamp Tool", "Patch Tool", "Spot Healing Brush Tool", "Eraser Tool"], answer: "Spot Healing Brush Tool" },
        { topic: "Retouching", question: "Clone Stamp Tool (S) bekerja dengan cara...", options: ["Menghapus piksel", "Mengisi dengan warna foreground", "Menduplikasi piksel dari area lain", "Memperhalus tekstur"], answer: "Menduplikasi piksel dari area lain" },
        { topic: "Retouching", question: "Untuk memperbaiki area yang lebih besar dengan menyalin tekstur dari area lain, alat yang cocok adalah...", options: ["Healing Brush", "Patch Tool", "Blur Tool", "Dodge Tool"], answer: "Patch Tool" },
        { topic: "Retouching", question: "Tombol keyboard yang ditekan untuk menentukan sumber (source) saat menggunakan Clone Stamp adalah...", options: ["Ctrl", "Shift", "Alt", "Tab"], answer: "Alt" },
        { topic: "Adjustment Layers", question: "Mengapa menggunakan Adjustment Layers lebih disarankan daripada Image > Adjustments?", options: ["Karena lebih cepat", "Karena bersifat non-destruktif", "Karena memiliki lebih banyak pilihan", "Karena membuat file lebih kecil"], answer: "Karena bersifat non-destruktif" },
        { topic: "Adjustment Layers", question: "Adjustment layer yang digunakan untuk mengubah semua warna menjadi hitam putih adalah...", options: ["Brightness/Contrast", "Hue/Saturation", "Black & White", "Photo Filter"], answer: "Black & White" },
        { topic: "Adjustment Layers", question: "Untuk mengontrol tingkat kecerahan dan kegelapan pada gambar, Anda menggunakan...", options: ["Levels atau Curves", "Color Balance", "Vibrance", "Invert"], answer: "Levels atau Curves" },
        { topic: "Adjustment Layers", question: "Fungsi 'Layer Mask' pada Adjustment Layer adalah...", options: ["Menghapus layer", "Membatasi area efek adjustment", "Menggabungkan layer", "Menduplikasi layer"], answer: "Membatasi area efek adjustment" },
        { topic: "Tipografi", question: "Panel utama untuk mengatur jenis font, ukuran, dan spasi antar huruf adalah...", options: ["Layers Panel", "History Panel", "Character Panel", "Paths Panel"], answer: "Character Panel" },
        { topic: "Tipografi", question: "Istilah untuk spasi antar dua huruf spesifik dalam tipografi disebut...", options: ["Tracking", "Leading", "Kerning", "Baseline"], answer: "Kerning" },
        { topic: "Tipografi", question: "Untuk mengubah teks menjadi bentuk (shape) agar bisa dimodifikasi lebih bebas, Anda perlu...", options: ["Merasterize teks", "Mengonversi ke Smart Object", "Mengonversi ke Shape", "Mem-filter teks"], answer: "Mengonversi ke Shape" },
        { topic: "Tipografi", question: "'Leading' (diucapkan 'ledding') dalam tipografi mengacu pada...", options: ["Spasi antar baris teks", "Spasi antar semua huruf", "Ketebalan huruf", "Kemiringan huruf"], answer: "Spasi antar baris teks" }
    ];

    let currentQuestionIndex = 0;
    let score = 0;

    const quizContainer = document.getElementById('quiz-container');
    const resultsContainer = document.getElementById('results-container');
    const questionText = document.getElementById('question-text');
    const optionsContainer = document.getElementById('options-container');
    const progressText = document.getElementById('progress-text');
    const nextBtn = document.getElementById('next-btn');
    const scoreText = document.getElementById('score-text');
    const restartBtn = document.getElementById('restart-btn');

    function loadQuiz() {
        const currentQuiz = quizData[currentQuestionIndex];
        questionText.textContent = currentQuiz.question;
        progressText.textContent = `Soal ${currentQuestionIndex + 1}/${quizData.length}`;
        optionsContainer.innerHTML = '';
        
        currentQuiz.options.forEach(option => {
            const button = document.createElement('button');
            button.textContent = option;
            button.className = 'quiz-option interactive-btn w-full text-left p-3 bg-blue-50 hover:bg-blue-100 rounded-lg border border-transparent';
            button.onclick = () => selectAnswer(button, option, currentQuiz.answer);
            optionsContainer.appendChild(button);
        });

        nextBtn.classList.add('hidden');
    }

    function selectAnswer(button, selectedOption, correctAnswer) {
        const buttons = optionsContainer.querySelectorAll('button');
        buttons.forEach(btn => {
            btn.disabled = true; // Disable all buttons
            if (btn.textContent === correctAnswer) {
                btn.classList.add('correct');
            } else if (btn === button) {
                btn.classList.add('incorrect');
            }
        });

        if (selectedOption === correctAnswer) {
            score++;
        }
        
        nextBtn.classList.remove('hidden');
    }

    function showResults() {
        quizContainer.classList.add('hidden');
        resultsContainer.classList.remove('hidden');
        scoreText.textContent = `${score}/${quizData.length}`;
    }

    nextBtn.addEventListener('click', () => {
        currentQuestionIndex++;
        if (currentQuestionIndex < quizData.length) {
            loadQuiz();
        } else {
            showResults();
        }
    });
    
    restartBtn.addEventListener('click', () => {
        currentQuestionIndex = 0;
        score = 0;
        resultsContainer.classList.add('hidden');
        quizContainer.classList.remove('hidden');
        loadQuiz();
    });

    // Initial load
    loadQuiz();


    // --- Flexibility Slider ---
    const slider = document.getElementById('flexibilitySlider');
    const sliderTextContainer = document.getElementById('flexibilityText');
    slider.addEventListener('input', (event) => {
        const value = parseInt(event.target.value);
        let title, text, color;
        if (value < 20) {
            title = 'Editing Destruktif';
            text = 'Perubahan langsung ke piksel asli. Sulit untuk diubah kembali.';
            color = 'red';
        } else if (value > 80) {
            title = 'Editing Non-Destruktif';
            text = 'Menggunakan Adjustment Layers. Sangat fleksibel dan aman, gambar asli tidak berubah.';
            color = 'green';
        } else {
            title = 'Di Antara Keduanya';
            text = 'Beberapa teknik bisa semi-destruktif. Selalu utamakan metode yang paling fleksibel.';
            color = 'yellow';
        }
        sliderTextContainer.innerHTML = `<h4 class="font-bold">${title}</h4><p>${text}</p>`;
        sliderTextContainer.className = `mt-4 p-4 bg-${color}-50 rounded-lg w-full text-center`;
    });

    // --- Typography Interactivity ---
    const interactiveText = document.getElementById('interactiveText');
    const fontSelector = document.getElementById('fontSelector');
    const sizeSlider = document.getElementById('sizeSlider');
    const sizeValue = document.getElementById('sizeValue');

    fontSelector.addEventListener('change', (e) => {
        interactiveText.style.fontFamily = e.target.value;
    });

    sizeSlider.addEventListener('input', (e) => {
        const newSize = e.target.value;
        interactiveText.style.fontSize = `${newSize}px`;
        sizeValue.textContent = newSize;
    });

    function changeTextColor(color) {
        interactiveText.style.color = color;
    }

</script>

</body>
</html>

